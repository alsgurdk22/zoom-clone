  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Noom 
    link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
    link(rel="stylesheet", href="/public/css/style.css")
  body
  header 
    h1 zoom-clone-coding
    h2 Anonymous
  main
    div#welcome
      form
        input(placeholder="채팅방 입력~", required, type="text")
        button Enter Room
      h4 Open Rooms:
      ul
    div#nickname
      form
        input(placeholder="닉네임 입력쓰", required, type="text")
        button Save
    div#room
      h3
      ul
      form#msg
        input(placeholder="메시지를 입력하세요후!", required, type="text")
        button Send
